pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        CLUSTER_NAME = 'jenkins-eks-cluster'
    }

    stages {
        stage('Setup AWS Credentials & EKS Auth') {
            steps {
                withCredentials([aws(credentialsId: 'AWS_CREDENTIALS', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                    # Export AWS Credentials for Authentication
                    export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                    export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                    export AWS_REGION=$AWS_REGION

                    # Debug AWS credentials
                    aws sts get-caller-identity || exit 1
                    aws eks list-clusters --region $AWS_REGION || exit 1

                    # Configure kubectl to access EKS cluster
                    aws eks --region $AWS_REGION update-kubeconfig --name $CLUSTER_NAME || exit 1

                    # Verify EKS connectivity
                    kubectl get nodes || exit 1
                    '''
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh '''
                echo "Current workspace: $(pwd)"
                ls -l kubernetes/

                # Apply Kubernetes manifests
                kubectl apply -f kubernetes/deployment.yaml || exit 1
                kubectl apply -f kubernetes/service.yaml || exit 1
                '''
            }
        }

        stage('Verify Deployment') {
            steps {
                sh '''
                echo "Checking deployment status..."
                kubectl get pods -o wide
                kubectl get svc -o wide
                '''
            }
        }
    }
}
